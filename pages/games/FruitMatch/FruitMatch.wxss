/* pages/FruitMatch/FruitMatch.wxss */
.background {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: -1;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.imgBig {
  height:400rpx;
}

/* 前置 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.search-info {
  padding-right: 30rpx;
  padding-left: 30rpx;
}

.head-title {
  align-items: center;
  text-align: center;
}

.head-title .title-cn {
  font-size: 40rpx;

}

.head-title .title-en {
  font-size: 30rpx;
  color: rgb(100, 100, 100);
}

.slide_image {
  width: 700rpx;
  height: 700rpx;
  margin: 0 auto;
}

.slide_image image {
  width: 100%;
  height: 100%;
}

.info-icon image {
  height: 35rpx;
  width: 35rpx;
}

.guide_text {
  width: 650rpx;
  margin: 10rpx auto;
}

.start {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  text-align: center;
  margin-top: 80rpx;
  margin-left: 10%;
  background-color: #c93c42;
  color: white;
  font-weight: 200;
  border-radius: 100rpx;
}

.swp-dot {
  display: flex;
  justify-content: center;
  flex: 1;
  margin-top: 18rpx;
}

.m-r-8 {
  margin-right: 8rpx;
}

.m-l-8 {
  margin-right: 8rpx;
}

.square-12 {
  width: 12rpx;
  height: 12rpx;
  background-color: #d8d8d8;
  border-radius: 6rpx;
  transition: width 0.2s linear;
}

.dot_active {
  background-color: #3c3c3c;
  width: 36rpx;
  transition: width 0.2s linear;
}

/* 游戏 */
.progress {
  margin-top: 36rpx;
  margin-bottom: 40rpx;
  margin-left: 15%;
  width: 70%;
  transition: 0.8s ease-out;
}

.icon {
  width: 80rpx;
  position: absolute;
  top: 0;
}

.img {
  height: 160rpx;
  background-color: #eeeeee;
}

.imgShow {
  opacity: 1;
  transform: rotateX(0deg);
  
  transition: 0.8s ease-out;
}

.imgHide {
  opacity: 0;
  transform: rotateX(-90deg);
  
  transition: 0.8s ease-in;
}

.col {
  float: left;
  width: 160rpx;
  height: 160rpx;
  margin: 10rpx;
  border-radius: 15%;
  border: 10rpx solid #ffffff;
  background-color: #ffffff;
}

.row {
  display: flex;
  justify-content: center;
}

.question {
  margin-top: 251rpx;
}

/* 教程 */
.popupController {
  padding: 0 40rpx;
}

.helperContent {
  text-align: center;
  font-size: 40rpx;
  line-height: 50rpx;
}

.helperButtons {
  display: flex;
  margin-top: 30rpx;
  margin-bottom: 50rpx;
}

.helperButtons > van-button {
  flex: 1;
}

.helperButton {
  padding: 30rpx;
  margin-bottom: 50rpx;
}