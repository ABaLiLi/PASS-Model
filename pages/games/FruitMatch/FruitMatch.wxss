.img {
  height: 160rpx;
  background-color: #eeeeee;
}

.img_show {
  opacity: 1;
  transform: rotateX(0deg);
  
  transition: 0.8s ease-out;
}

.img_hide {
  opacity: 0;
  transform: rotateX(-90deg);
  
  transition: 0.8s ease-in;
}

