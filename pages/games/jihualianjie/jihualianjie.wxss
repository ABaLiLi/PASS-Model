}
.progressimg {
  width: 20px;
  height: 20px;
  position: fixed;
  background-size: 100% 100%;
  margin-top: -10px;
  transform: rotate(10deg);
}


/* 矩阵部分*/

.active-cell {
  width: 12vw;
  height: 12vw;
  margin-left: 3vw;
  margin-right: 3vw;
  margin-bottom: 3vw;
  margin-top: 3vw;
  float: left;
  border-radius: 12vw;
  box-sizing: border-box;
  color: #b32953;
}

.cell {
  width: 12vw;
  height: 12vw;
  margin-left: 3vw;
  margin-right: 3vw;
  margin-bottom: 3vw;
  margin-top: 3vw;
  float: left;
  border-radius: 12vw;
  box-sizing: border-box;
  color: #F17F42;
}

.cell-con {
  width: 12vw;
  height: 12vw;
  line-height: 12vw;
  position: absolute;
  font-size: 26px;
  font-weight: bold;
  text-align: center;
  border-radius: 12vw;
}

.cell-con-lock {
  width: 12vw;
  height: 12vw;
  line-height: 12vw;
  position: absolute;
  font-size: 26px;
  font-weight: bold;
  text-align: center;
  border-radius: 12vw;
  color: #0082aa;
}

