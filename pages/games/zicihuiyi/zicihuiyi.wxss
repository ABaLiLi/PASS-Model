.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

._img {
  height:200px;
}

.bgimg {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
  margin-top: 0px;
}

.btnimg {
  height: 120px;
  width: 90px;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
  border-radius: 10px;
  filter: drop-shadow(5px 5px 5px #000000);
}

.progressimg {
  width: 20px;
  height: 20px;
  position: fixed;
  background-size: 100% 100%;
  margin-top: -10px;

}

.onload {
