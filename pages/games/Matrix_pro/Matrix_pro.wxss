}

.title-en {
  font-size: 30rpx;
  color: rgb(100, 100, 100);
}

.title2>image {
  height: 25px;
  width: 25px;
  vertical-align: middle;
}

.title2 {
  margin-top: 50rpx;
  font-size: 35rpx;
  height: 35rpx;
