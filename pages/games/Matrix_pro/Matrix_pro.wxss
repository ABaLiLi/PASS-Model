/* pages/Matrix_pro/Matrix_pro.wxss */
.background {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: -1;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.imageLevel {
  height:400rpx;
}

/* 前置 */
.title {
  text-align: center;
}

.head-title {
  align-items: center;
  text-align: center;
}

.title-cn {
  font-size: 40rpx;
}

.title-en {
  font-size: 30rpx;
  color: rgb(100, 100, 100);
}

.subTitle>image {
  height: 50rpx;
  width: 50rpx;
  vertical-align: middle;
}

.subTitle {
  margin-top: 50rpx;
  font-size: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  font-weight: bold;
}

.swiper {
  height: 400rpx;
}

.swiper-item {
  height: 400rpx;
}

.swiper-item>view {
  display: flex;
  justify-content: center;
}

.swiper-image {
  height: 400rpx;
}

.content {
  margin: 20rpx 60rpx 0 60rpx;
  font-size: 30rpx;
  line-height: 45rpx;
}

.start{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  text-align: center;
  margin: 26rpx 10rpx 48rpx 10rpx;
  color: white;
  font-weight: 200;
  border-radius: 100rpx;
  text-align: center;
  align-content: center;
}

.gameInfo {
  margin: 20rpx 18rpx 20rpx 18rpx;
}

/* 游戏 */
.progress {
  margin-top: 18rpx;
  margin-left: 15%;
  width: 70%;
}

.icon {
  width: 80rpx;
  position: absolute;
  top: -16rpx;
}

.question>view,
.selection>view {
  display: flex;
  justify-content: center;
}

.question {
  margin: 60rpx 0 10rpx 0;
  transition: all 1.2s;
}

.questionText {
  font-weight: bold;
  font-size: 50rpx;

  margin-top: 20rpx;
}

.questionImage {
  height: 450rpx;
}

.selection {
  transition: all 1.2s;
}

.row {
  display: flex;
  justify-content: center;
}

.col {
  float: left;
  width: 178rpx;
  height: 110rpx;
  margin: 18rpx;
  border-radius: 15%;
  border: 10rpx solid #ffffff;
  background-color: #ffffff;

  display: flex;
  justify-content: center;
}

.selectImage {
  height: 110rpx;
}

.imageDefault {
  position: relative;
}

.imageSelected {
  border-color: rgb(179, 58, 21);
}

.comfirm {
  width: fit-content;
  margin: 0 auto;
}

.comfirmButton{
  height: 80rpx;
  width: 650rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  text-align: center;
  margin: 50rpx 30rpx;
  background-color:#004e66;
  color: white;
  font-weight: 200;
  border-radius: 100rpx;
}

