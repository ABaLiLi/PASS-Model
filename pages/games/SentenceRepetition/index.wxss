/* 首页 */

/* 去除滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.search-info{
  padding-right: 30rpx;
  padding-left: 30rpx;
}

.head-title{
  align-items: center;
  text-align: center;
}
.head-title .title-cn{
  font-size: 40rpx;

}
.head-title .title-en{
  font-size: 30rpx;
  color: rgb(100, 100, 100);
}
.slide_image{
  width: 700rpx;
  height: 700rpx;
  margin: 0 auto;
}
.slide_image image{
  width: 100%;
  height: 100%;
}

.info-icon image{
  height: 35rpx;
  width: 35rpx;
}
.guide_text{
  width: 650rpx;
  margin: 10rpx auto;
}

.start{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  text-align: center;
  margin-top: 80rpx;
  margin-left:10%;
  background-color: #c93c42;
  color: white;
  font-weight: 200;
  border-radius: 100rpx;
}

.swp-dot {
  display: flex;
  justify-content: center;
  flex: 1;
  margin-top: 18rpx;
}

.m-r-8 {
  margin-right: 8rpx;
}

.m-l-8 {
  margin-right: 8rpx;
}

.square-12 {
  width: 12rpx;
  height: 12rpx;
  background-color: #d8d8d8;
  border-radius: 6rpx;
  transition: width 0.2s linear;
}

.dot_active {
  background-color: #3c3c3c;
  width: 36rpx;
  transition: width 0.2s linear;
}

/* 游戏主体 */
.bgimg {
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  z-index: -1;
}

.progressimg {
  width: 40rpx;
  height: 40rpx;
  position: fixed;
  margin-top: -30rpx;
  transform: rotate(6deg);
}

.in_title_text {
  margin-top: 100rpx;
}

