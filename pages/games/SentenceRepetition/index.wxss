  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  flex-wrap: wrap;
}
.Selection{
  display: flex;
  /* flex-direction是用来控制里面的内容时水平呈现还是垂直呈现*/
  flex-direction: row;
  /* flex-wrap是用来控制能否换行，必须设置为能换行 */
  flex-wrap: wrap;
  justify-content: center;
}

