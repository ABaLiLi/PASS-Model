<!--pages/RecieveAttention/game.wxml-->
<view class="game">
  <!-- 背景图 -->
  <image class="background" src="cloud://pass-model-7g3fo4ig00002b96.7061-pass-model-7g3fo4ig00002b96-1304449250/images/wallpaper/game-wp1.png" mode="aspectFill"></image>
  <!-- 剩余时间 -->
  <view class="time"style="position:fixed; top:10;width: 750rpx;">
    <van-progress pivot-text=" " color="#FFC0CB" percentage="{{time/1.2}}"></van-progress>
    <image class="progressimg"
        src="cloud://pass-model-7g3fo4ig00002b96.7061-pass-model-7g3fo4ig00002b96-1304449250/Game_RecieveAttention/progress.png" mode="aspectFill" style="margin-left:{{6.25*time-20}}rpx"></image>
  </view>
  <!-- Question -->
  <view class="Question">
    <text>{{question}}</text>
  </view>
  <!-- n*n的格子 -->
  <view>
    <view class="line" wx:for="{{line}}" wx:key="idx" wx:for-index="idx">
      <view class="unit" wx:for="{{column}}" wx:key="index" bindtap="tap_unit" data-index="{{index}}"
        data-row="{{idx}}">
        <image class="img" src="{{picture[idx][index]}}" mode="heightFix"></image>
        <view class="text">
          <text class="left"
            style="font-style:{{style[idx][index][0]}};font-weight:{{weight[idx][index][0]}}">{{text[idx][index][0]}}</text>
          <text decode="{{true}}">&nbsp;</text>
          <text class="right"
            style="font-style:{{style[idx][index][1]}};font-weight:{{weight[idx][index][1]}}">{{text[idx][index][1]}}</text>
        </view>
      </view>
    </view>
  </view>
  <view class="buttion">
    <Button class="over" bindtap="tap_over">提交</Button>
  </view>
  <view class="white"> </view>
</view>