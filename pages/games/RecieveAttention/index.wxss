/* 首页 */

/* 去除滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.search-info{
  padding-right: 30rpx;
  padding-left: 30rpx;
}

.head-title{
  align-items: center;
  text-align: center;
}

.head-title .title-cn{
  font-size: 40rpx;

}

.head-title .title-en{
  font-size: 30rpx;
  color: rgb(100, 100, 100);
}
.slide_image{
  width: 700rpx;
  height: 700rpx;
  margin: 0 auto;
}
.slide_image image{
  width: 100%;
  height: 100%;
}

.info-icon image{
  height: 35rpx;
  width: 35rpx;
}
.guide_text{
  width: 650rpx;
  margin: 10rpx auto;
}

.start{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  text-align: center;
  margin-top: 80rpx;
  margin-left:10%;
  background-color: #c93c42;
  color: white;
  font-weight: 200;
  border-radius: 100rpx;
}

.swp-dot {
  display: flex;
  justify-content: center;
  flex: 1;
  margin-top: 18rpx;
}

.m-r-8 {
  margin-right: 8rpx;
}

.m-l-8 {
  margin-right: 8rpx;
}

.square-12 {
  width: 12rpx;
  height: 12rpx;
  background-color: #d8d8d8;
  border-radius: 6rpx;
  transition: width 0.2s linear;
}

.dot_active {
  background-color: #3c3c3c;
  width: 36rpx;
  transition: width 0.2s linear;
}

/* 游戏主体 */
.background {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  z-index: -1;
}

.progressimg {
  width: 40rpx;
  height: 40rpx;
  position: fixed;
  margin-top: -30rpx;
  transform: rotate(6deg);
}

.head{
  position:fixed; 
  top:0rpx;
  width: 750rpx;
  z-index: 1;
  background: url('https://7061-pass-model-7g3fo4ig00002b96-1304449250.tcb.qcloud.la/images/wallpaper/game-wp1.png?sign=b10d97b2d91960da4fbaf12108c07c68&t=1609175549');
  background-size: cover;
}

.time{
  margin-top:30rpx;
  width: 600rpx;
  margin-left:75rpx;
}

.Question {
  margin-top: 75rpx;
  /* margin-bottom: 40rpx; */
  text-align: center;
  font-size: 40rpx;
}

.line {
  display: flex;
  justify-content: center;
}

.unit {
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
  position: relative;
}

.img {
  height: 100rpx;
}

.text {
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 0;
  top: 0px;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center
}

.confirm{
  height: 20%;
  position: absolute;
  left: 37%; 
  box-shadow: 1rpx;
  filter: drop-shadow(5px 5px 5px #000000);
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

._img {
  height:200px;
}

.white {
  width: 100%;
  height: 10%;
  position: absolute;
}