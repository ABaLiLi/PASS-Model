.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.app-image {
  width: 372rpx;
  height: 416rpx;
  margin-top: 100rpx;
}

.app-motto1 {
  padding-top: 50rpx;
  font-size: 40rpx;
  font-weight: 600;
}
.app-motto2 {
  padding-top: 20rpx;
  font-size: 35rpx;
  color: rgb(107, 105, 105);
}

.app-login {
  width: 400rpx;
  margin-top: 100rpx;
  background-color: #c93c42;
  color: white;
  font-size: medium;
  font-weight: 400;
  border-radius: 30px;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin-top: 200rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  padding-top: 30rpx;
  font-size: 40rpx;
  margin-bottom: 20rpx;
}

