/* pages/RecieveAttention/game.wxss */

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  /* background-size: 100% 100%; */
  /* background-size: cover; */
  /* background-color: #CCCCCC; */
  z-index: -1;
}
.time{
  margin-top: 10rpx;
  position: relative;
}
.Question {
  margin-top: 10rpx;
  margin-bottom: 60rpx;
  text-align: center;
  transition: 0.5s;
  position: relative;

  font-size: 40rpx;
}



.line {
  display: flex;
  justify-content: center;
}

.unit {
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
  position: relative;
}

.img {
  height: 100rpx;
  transition: 0.5s;
}

.text {
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 0;
  top: 0px;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center
}

.button{
  width: 100%;
  height: 100%;
  position:fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.over {
  margin-top: 100rpx;
  background-color: antiquewhite;
  border-radius: 10rem;
}

.white {
  width: 100%;
  height: 10%;
  position: absolute;
}