/* pages/about/index.wxss */

.about-box{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 80rpx 0;
 
}
.pass-icon image{
  width: 320rpx;
  height: 240rpx;

}
.pass-title{
  color:#4b556c;
  text-align:center;
  font-size: 20rpx;
  margin-top: 40rpx;
}

.pass-text{
  
  margin-top: 40rpx;
  border: 2rpx solid rgb(168, 165, 165);
  border-radius: 15%;
  padding: 15rpx; 
  width: 400rpx;
  height: 180rpx;
  font-size: 20rpx;
  text-align:center;
  letter-spacing: 2rpx;
  color:#4b556c;
}

