/* pages/FruitMatch/FruitMatch.wxss */

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0px;
  /* background-size: 100% 100%; */
  /* background-size: cover; */
  /* background-color: #CCCCCC; */
  z-index: -1;
}

.title {
  text-align: center;
}

.title > image {
  height: 60px;
  margin-top: 15px;
}

.in_title {
  position: absolute;
  left: 25%;
  top: 13%;

  transition: 0.2s;
}

.in_title_text {
  width: 163px;
  padding: 5px;
  border-radius: 10rem;
  text-align: center;

  font-size: 20px;
}

.in_title_button1 {
  width: 100px;
  margin-left: 45px;
  z-index: 10;
  margin-top: 50px;
  background-color: antiquewhite;
  border-radius: 10rem;
}

.in_title_button2 {
  width: 100px;
  margin-left: 45px;
  z-index: 10;
  margin-top: 20px;
  background-color: antiquewhite;
  border-radius: 10rem;
}

.Question {
  margin-top: 50px;
  margin-bottom: 30px;
  text-align: center;
  transition: 0.5s;

  position: relative;
  top: 5px;
  transition: 0.5s;
}


.Question > view {
  width: 60%;
  padding: 5px;
  margin: 5px auto;
  border-radius: 10rem;
  background-color: rgb(236, 236, 236);
  text-align: center;
}

.Question > view > text {
  font-size: 20px;
}

.img_Question {
  border: 5px solid #ddd;
}

.img {
  height: 60px;
  background-color: #eeeeee;
  transition: 0.5s;
}

.row {
  float: left;
  width: 60px;
  height: 60px;
  margin: 5px;
  border: 5px solid #ddd;
  background-color: #ffffff;
}

.grid {
  display: flex;
  justify-content: center;
}