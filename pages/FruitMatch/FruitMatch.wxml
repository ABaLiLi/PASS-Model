<view hidden="" >
  <!-- n*n的格子 -->
  <view class="grid" wx:for="{{cnt_row}}" wx:key="*this" wx:for-index="idx" >
    <view class="row" wx:for="{{row[idx]}}" wx:key="*this" bindtap="tap_image" data-index="{{index}}" data-row="{{idx}}" >
      <image class="img" src="{{item}}" mode="heightFix" hidden="{{img_hidden[idx][index]}}" ></image>
    </view>
  </view>
</view>

