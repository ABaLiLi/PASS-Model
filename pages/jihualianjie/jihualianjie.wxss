/* 矩阵部分*/

.active-cell {
  width: 12vw;
  height: 12vw;
  margin-left: 3vw;
  margin-right: 3vw;
  margin-bottom: 3vw;
  margin-top: 3vw;
  float: left;
  border-radius: 12vw;
  box-sizing: border-box;
  color: #b32953;
}

.cell {
  width: 12vw;
