/* pages/2048/2048.wxss */
.bgimg1 {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}
.bgimg2 {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
  opacity: 0.8;
  -webkit-filter:blur(3px);
  -moz-filter:blur(3px);
  -o-filter:blur(3px);
  -ms-filter:blur(3px);
  filter:blur(3px);
}

.tapbg{
  width: 15vw;
  height: 15vw;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
  margin-top: -1.5vw;
  margin-left: -1.5vw;
}
.tapbgno{
  display: none;
}
.btnimg {
  height: 90px;
  width: 120px;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
  border-radius: 10px;
  filter: drop-shadow(15px 15px 5px #000000);
}

