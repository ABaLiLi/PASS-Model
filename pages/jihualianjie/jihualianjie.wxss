/* 矩阵部分*/

.active-cell {
  border: solid;
  border-width: 1vw;
  border-color: #aebe4d;
  width: 12vw;
  height: 12vw;
  margin-left: 3vw;
  margin-right: 3vw;
  margin-bottom: 3vw;
  margin-top: 3vw;
  float: left;
  border-radius: 6vw;
  box-sizing: border-box;
  background: rgba(160, 68, 52, 0.7);
  overflow: hidden;
}

.cell {
  border: 1vw solid #546fb8;
  width: 12vw;
  height: 12vw;
  margin-left: 3vw;
  margin-right: 3vw;
  margin-bottom: 3vw;
  margin-top: 3vw;
  float: left;
  border-radius: 6vw;
  box-sizing: border-box;
  background: #546fb8;
  overflow: hidden;
}

.cell-con {
  width: 10vw;
  height: 10vw;
  line-height: 10vw;
  position: absolute;
  font-size: 30px;
  font-weight: bold;
  text-align: center;
  overflow: hidden;
  border-radius: 5vw;

}

.cell-con-lock {
  width: 10vw;
  height: 10vw;
  line-height: 10vw;
  position: absolute;
  font-size: 30px;
  font-weight: bold;
  text-align: center;
  background: #189661;
  overflow: hidden;
  border-radius: 5vw;
}

