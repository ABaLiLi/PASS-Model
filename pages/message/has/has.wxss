.message {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image {
  width: 248rpx;
  height: 200rpx;
  padding-top: 160rpx;
}

.texttips {
  width: 500rpx;
  margin: -36rpx 100rpx 20rpx 100rpx;
  border-radius: 30rpx;
  padding: 28rpx 28rpx 70rpx 28rpx;
  border: 2rpx solid rgb(168, 165, 165);
}
.tips {
  font-size: 35rpx;
}
.texttips .select {
  padding-top: 40rpx;
}
.radio {
  padding: 0 80rpx 0 50rpx;
}
.radio radio {
  transform:scale(0.85);
}
.button {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.back {
  width: 200rpx;
  margin: 100rpx 50rpx;
  background-color: #E06663;
  color: white;
  font-size: small;
  font-weight: 400;
  border-radius: 10px;
}
.next {
